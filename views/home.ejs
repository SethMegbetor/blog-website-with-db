<%- include("partials/header"); -%>

<h1>Home</h1>
<h3>Type /compose to go to the compose page and add a blog post</h3>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>

<h1><%=post.title%></h1>
<p>
  <%=post.content.substring(0, 100) + " ..."%>
  <a href="/posts/<%=post._id%>">Read More</a>
</p>

<% }) %> <%- include("partials/footer"); -%>
